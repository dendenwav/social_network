{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@exceptions": ["src/libs/exceptions"],
      "@infrastructure": ["src/infrastructure/*"],
      "@libs": ["src/libs/*"],
      "@modules": ["src/modules/*"],
      "@src": ["src/"],
      "@tests": ["tests/*"],
    }
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/types/**/*"
  ],
}